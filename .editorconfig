# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[*.json]
insert_final_newline = false

[*.md]
indent_size = 2
indent_style = space

[*.sh]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space

[Dockerfile]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.{tf,tfvars,tfstate}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[{.aqua, .password, .pat, version.txt}]
insert_final_newline = false